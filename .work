# Kubernetes environment variables.
export KUBECONFIG=$HOME/.kube/config:$HOME/.styra/kube-config:$HOME/.styra/oidc-kube-config

# Setup an alias for kubectl.
alias k="kubectl"

# Completions for the above alias.
source <(kubectl completion bash)
complete -F __start_kubectl k

# Styra environment variables.
export CONF=$HOME/.styra
export STYRA_CONFIG_ROOT=$HOME/.styra
export STYRA_FEATURES_ROOT=$HOME/.styra
